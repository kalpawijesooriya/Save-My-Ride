<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/notificationRel"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notification_background">

        <TextView
            android:id="@+id/notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:textSize="24dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinsbold"
            android:text="Ekala - Kotadeniyawa">

        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_marginTop="-10dp"
        android:id="@+id/distance_rel"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/distance_background">

        <TextView
            android:paddingTop="10dp"
            android:id="@+id/distance_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"

            android:textSize="18dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinsbold">

        </TextView>


    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:id="@+id/speed_warn"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/poppinsregular"
        android:text="Your Speed is too high"
        android:textColor="#E20808"
        android:textSize="24sp">

    </TextView>

    <RelativeLayout
        android:id="@+id/speed_rel"
        android:visibility="gone"
        android:layout_width="111dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="120dp"
        android:layout_height="wrap_content">

        <TextView

            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/colorAccent"
            android:id="@+id/speed"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"

            android:background="@drawable/speed_text_design"
            android:padding="10dp">

        </TextView>
    </RelativeLayout>

</LinearLayout>